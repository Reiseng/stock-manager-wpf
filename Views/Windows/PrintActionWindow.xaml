<Window x:Class="StockControl.Views.Windows.PrintActionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
        <!-- Success Text -->
    <Border Padding="20" CornerRadius="6">
         <StackPanel Orientation="Horizontal">
                <Button Content="Confirmar"
                        Command="{Binding ConfirmCheckoutCommand}"
                        Margin="5"/>
                <Button Content="PDF"
                        Command="{Binding GenerateInvoicePDFCommand}"
                        Margin="5"/>
                <Button Content="Ticket"
                        Command="{Binding ConfirmCheckoutCommand}"
                        Margin="5"/>
            </StackPanel>
    </Border>

</Window>