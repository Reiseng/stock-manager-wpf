<Window x:Class="StockControl.Views.Windows.SuccessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Background="#2ECC71"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner">
        <!-- Success Text -->
    <Border Padding="20" CornerRadius="6">
        <TextBlock
            Text="{Binding Message, RelativeSource={RelativeSource AncestorType=Window}}"
            Foreground="White"
            FontSize="16"
            FontWeight="SemiBold"/>
    </Border>

</Window>