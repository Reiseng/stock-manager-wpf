<UserControl x:Class="StockControl.Views.Products.AddProductView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#F5F6F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#2D6CDF"
                Height="60">
            <TextBlock Text="{Binding Title}"
                       Foreground="White"
                       FontSize="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1"
                Background="White"
                Padding="40"
                CornerRadius="8"
                Margin="40"
                MaxWidth="900">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Name -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre" Margin="0,10,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0"/>

                <!-- Brand -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Marca" Margin="0,10,0,0"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding Brand}" Margin="0,10,0,0"/>

                <!-- Barcode -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="CÃ³digo" Margin="0,10,0,0"/>
                <TextBox Grid.Row="2" Grid.Column="1"
                         Text="{Binding Barcode}" Margin="0,10,0,0"/>

                <!-- Price -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Precio" Margin="0,10,0,0"/>
                <TextBox Grid.Row="3" Grid.Column="1"
                         Text="{Binding Price}" Margin="0,10,0,0"/>

                <!-- Stock -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Stock inicial" Margin="0,10,0,0"/>
                <TextBox Grid.Row="4" Grid.Column="1"
                         Text="{Binding Stock}" Margin="0,10,0,0"/>

                <!-- Unit type -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Tipo de unidad" Margin="0,10,0,0"/>
                <ComboBox Grid.Row="5" Grid.Column="1"
                          ItemsSource="{Binding UnitTypes}"
                          SelectedItem="{Binding SelectedUnitType}" Margin="0,10,0,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Buttons -->
                <StackPanel Grid.Row="6"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <Button Content="Guardar"
                            Width="100"
                            Margin="0,0,10,0"
                            Command="{Binding SaveCommand}"/>

                    <Button Content="Cancelar"
                            Width="100"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
