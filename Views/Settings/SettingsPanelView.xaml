<UserControl x:Class="StockControl.Views.Settings.SettingsPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="Auto">
    <Grid Background="#F5F6F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#2D6CDF"
                Height="60">
            <TextBlock Text="Panel de configuración"
                       Foreground="White"
                       FontSize="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1"
                Background="White"
                Padding="40"
                CornerRadius="8"
                Margin="40"
                MaxWidth="900">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Name -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre*" Margin="0,10,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,10,0,0"/>

                <!-- CUIT -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="CUIT*" Margin="0,10,0,0"/>
                <TextBox Grid.Row="1" Grid.Column="1"
                         Text="{Binding CUIT}" Margin="0,10,0,0"/>

                <!-- Tax Condition -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Condicion de IVA*" Margin="0,10,0,0"/>
                <ComboBox Grid.Row="2" Grid.Column="1"
                          ItemsSource="{Binding TaxConditions}"
                          SelectedItem="{Binding SelectedTaxCondition}" Margin="0,10,0,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Converter={StaticResource EnumDescriptionConverter}}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
 
                <!-- Tax -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Impuesto*" Margin="0,10,0,0"/>
                <TextBox Grid.Row="3" Grid.Column="1"
                         Text="{Binding Tax}" Margin="0,10,0,0"/>

                <!-- Phone -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Telefono" Margin="0,10,0,0"/>
                <TextBox Grid.Row="4" Grid.Column="1"
                         Text="{Binding Phone}" Margin="0,10,0,0"/>

                <!-- Email -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Email" Margin="0,10,0,0"/>
                <TextBox Grid.Row="5" Grid.Column="1"
                         Text="{Binding Email}" Margin="0,10,0,0"/>

                <!-- Address -->
                <TextBlock Grid.Row="6" Grid.Column="0" Text="Dirección" Margin="0,10,0,0"/>
                <TextBox Grid.Row="6" Grid.Column="1"
                         Text="{Binding Address}" Margin="0,10,0,0"/>

                <!-- Buttons -->
                <StackPanel Grid.Row="7"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">

                    <Button Content="Guardar"
                            Width="100"
                            Margin="0,0,10,0"
                            Command="{Binding SaveCommand}"/>

                    <Button Content="Cancelar"
                            Width="100"
                            Command="{Binding CancelCommand}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
