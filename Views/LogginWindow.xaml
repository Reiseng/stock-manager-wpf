<Window x:Class="StockControl.Views.LogginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:StockControl.ViewModels"
        Title="Sistema de facturación" 
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:LogginWindowViewModel/>
    </Window.DataContext>

    <Grid Background="#F5F6F8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="#2D6CDF"
                Height="60">
            <TextBlock Text="Inicio de sesión"
                       Foreground="White"
                       FontSize="24"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1"
                Background="White"
                Padding="40"
                CornerRadius="8"
                Margin="40"
                MaxWidth="900">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Username -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Nombre de usuario*" Margin="0,10,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="1"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Width="200"
                         Height="20"
                         VerticalAlignment="Center"
                         Margin="0,10,0,0"/>
                <TextBlock
                        Grid.Row="0" Grid.Column="1"
                        Text="Usuario"
                        Foreground="Gray"
                        IsHitTestVisible="False"
                        Margin="5,10,0,0"
                        VerticalAlignment="Center"
                        Visibility="{Binding Username,
                            Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>

                <!-- Password -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Contraseña" Margin="0,10,0,0"/>
                <PasswordBox
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="0,10,0,0"
                    Width="200"
                    Height="20"
                    VerticalAlignment="Center"
                    PasswordChanged="PasswordBox_PasswordChanged"/>
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="Contraseña"
                        Foreground="Gray"
                        IsHitTestVisible="False"
                        Margin="5,10,0,0"
                        VerticalAlignment="Center"
                        Visibility="{Binding Password,
                            Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>

                <TextBlock
                        Grid.Row="2"
                        Grid.ColumnSpan="2"
                        Text="{Binding ErrorMessage}"
                        Foreground="Red"
                        TextAlignment="Center"
                        Margin="0,10,0,0"/>
                <!-- Buttons -->
                <StackPanel Grid.Row="3"
                            Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <Button Content="Iniciar sesión"
                            Width="100"
                            Margin="0,0,10,0"
                            IsDefault="True"
                            Command="{Binding LogginCommand}"/>

                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
